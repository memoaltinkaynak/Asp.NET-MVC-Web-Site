@model Product

    <div class="card mb-2">
        <img class="card-img-top" src="~/img/@Model.ImageUrl">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <a href="/product/details/@Model.ProductId" class="btn btn-primary">İncele</a>
        </div>
    </div>